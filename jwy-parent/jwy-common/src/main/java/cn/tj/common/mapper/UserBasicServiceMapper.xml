<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tj.common.mapper.UserBasicServiceMapper">
   <sql id="user_login_param">
    select 
	    userid,
	    username,
	    logindate
    from  
    	user_login
   </sql>
   <select id="userlogin" resultType="cn.tj.common.bean.UserLoginBean">
  	 <include refid="user_login_param"></include>
  	 where 
  	 username = #{username} 
  	 and password = #{password} 
   </select>
   <!-- useGeneratedKeys="true" keyProperty="userid"  -->
   <insert id="register">
    <selectKey resultType="java.lang.Short" order="AFTER" keyProperty="userid">
	  SELECT LAST_INSERT_ID() AS id
	</selectKey>
     insert into user_login(
   		  username,password,logindate,registerdate
     )
     values(
         #{userbean.username},
         #{userbean.password},
         sysdate(),
         sysdate()
     )
   </insert>
</mapper>